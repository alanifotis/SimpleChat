<div class="col-start-1 col-end-8 p-3 rounded-lg">
    <div class="flex flex-row items-center">
        <div class="flex items-center justify-center h-10 w-10 rounded-full bg-indigo-500 flex-shrink-0">
            @if (!String.IsNullOrEmpty(userName)) @GetInitials(userName)
        </div>
        <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
            <div>@if (!String.IsNullOrEmpty(chatMessage)) @chatMessage</div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? chatMessage { get; set; }


    [Parameter]
    public string? userName { get; set; }

    static string GetInitials(string input)
    {
        char[] separators = new char[] { ' ', '_', '-' };
        var words = input.Split(separators, StringSplitOptions.RemoveEmptyEntries);
        var initials = words.Select(word => word.Substring(0, 1).ToUpper());
        return string.Join("", initials);
    }

}